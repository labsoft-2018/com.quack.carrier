{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "storybook"
  ],
  "exclude": [
    "node_modules"
  ]
}